<%- include('../common/menu')  %>

<main class="form-signin">
    <form action="/admin/autenticar" method="post">
        
        <h1 class="mb-3 text-center">Login</h1>
        <div class="form-floating">
            <input id="usuario" name="usuario" placeholder="Usuário" autocomplete="off" type="text" class="form-control" required>
            <label for="usuario">Usuário</label>
        </div>
        <div class="form-floating">
            <input id="senha" name="senha" placeholder="Senha" autocomplete="off" type="password" class="form-control" required>
            <label for="Senha">Usuário</label>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">Entrar</button>
    </form>
</main>

